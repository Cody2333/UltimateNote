<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:shrinkColumns="*"
    android:stretchColumns="0"
    tools:context="com.mlzc.imagenote.activity.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="登录"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_input"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:hint="邮箱" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_input"
        android:layout_below="@+id/email_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:hint="密码"
        android:textSize="20dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:text="登录"
        android:id="@+id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#ffab00"
        android:onClick="onActivityLogin"
        android:layout_centerVertical="true"
        android:layout_below="@+id/password_input" />

    <Button
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:text="忘记密码"
        android:id="@+id/forgetPass_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#ffab00"
        android:onClick="onActivityForgetPassword"
        android:layout_centerVertical="true"
        android:layout_below="@+id/login_btn" />

    <Button
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:text="注册"
        android:id="@+id/register_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#ffab00"
        android:onClick="onActivityRegister"
        android:layout_centerVertical="true"
        android:layout_below="@+id/forgetPass_btn" />

</RelativeLayout>
